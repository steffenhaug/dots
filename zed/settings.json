// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "vim_mode": true,

  "buffer_font_family": "JuliaMono",
  "buffer_font_weight": 500,

  // Doesn't actually work on linux...
  "buffer_font_features": {
    "zero": true
  },

  "languages": {
    "Julia": {
      "tab_size": 2
    }
  },

  "use_autoclose": false,

  "ui_font_size": 15,
  "buffer_font_size": 18,

  "theme": {
    "mode": "system",
    "light": "Chanterelle",
    "dark": "One Dark"
  },

  "cursor_blink": false,

  "scrollbar": {
    "show": "never"
  },

  "vertical_scroll_margin": 5,

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },

  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },

  "git": {
    "git_gutter": "tracked_files"
  },

  "project_panel": {
    "button": true,
    "default_width": 200,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 15,
    "auto_fold_dirs": false
  },

  "outline_panel": {
    "button": false,
    "default_width": 200,
    "indent_size": 15
  },

  "terminal": {
    "env": {
      "INSIDE_ZED": ""
    },
    "font_size": 15,
    "toolbar": {
      "title": false
    },
    "button": false
  },

  "indent_guides": {
    "enabled": false
  },

  "show_wrap_guides": true,
  "wrap_guides": [70],

  "hover_popover_enabled": false,

  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  }
}
